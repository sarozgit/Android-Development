<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EB7070"
    tools:context=".MainActivity">

  <HorizontalScrollView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/hscrollview"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="10dp"
      >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:padding="10dp">

          <Button
              android:layout_width="150dp"
              android:layout_height="wrap_content"
              android:id="@+id/btn1"
              android:textColor="#ffff"
              android:background="#000"
              android:text="Table 1"
              android:textSize="20dp"
              android:layout_marginLeft="10dp"
              />

          <Button
              android:layout_width="150dp"
              android:layout_height="wrap_content"
              android:id="@+id/btn2"
              android:textColor="#ffff"
              android:background="#000"
              android:text="Table 2"
              android:textSize="20dp"
              android:layout_marginLeft="10dp"
              />

          <Button
              android:layout_width="150dp"
              android:layout_height="wrap_content"
              android:id="@+id/btn3"
              android:textColor="#ffff"
              android:background="#000"
              android:text="Table 3"
              android:textSize="20dp"
              android:layout_marginLeft="10dp"
              />

          <Button
              android:layout_width="150dp"
              android:layout_height="wrap_content"
              android:id="@+id/btn4"
              android:textColor="#ffff"
              android:background="#000"
              android:text="Table 4"
              android:textSize="20dp"
              android:layout_marginLeft="10dp"
              />

          <Button
              android:layout_width="150dp"
              android:layout_height="wrap_content"
              android:id="@+id/btn5"
              android:textColor="#ffff"
              android:background="#000"
              android:text="Table 5"
              android:textSize="20dp"
              android:layout_marginLeft="10dp"
              />

          <Button
              android:layout_width="150dp"
              android:layout_height="wrap_content"
              android:id="@+id/btn6"
              android:textColor="#ffff"
              android:background="#000"
              android:text="Table 6"
              android:textSize="20dp"
              android:layout_marginLeft="10dp"
              />

          <Button
              android:layout_width="150dp"
              android:layout_height="wrap_content"
              android:id="@+id/btn7"
              android:textColor="#ffff"
              android:background="#000"
              android:text="Table 7"
              android:textSize="20dp"
              android:layout_marginLeft="10dp"
              />

          <Button
              android:layout_width="150dp"
              android:layout_height="wrap_content"
              android:id="@+id/btn8"
              android:textColor="#ffff"
              android:background="#000"
              android:text="Table 8"
              android:textSize="20dp"
              android:layout_marginLeft="10dp"
              />

          <Button
              android:layout_width="150dp"
              android:layout_height="wrap_content"
              android:id="@+id/btn9"
              android:textColor="#ffff"
              android:background="#000"
              android:text="Table 9"
              android:textSize="20dp"
              android:layout_marginLeft="10dp"
              />

          <Button
              android:layout_width="150dp"
              android:layout_height="wrap_content"
              android:id="@+id/btn10"
              android:textColor="#ffff"
              android:background="#000"
              android:text="Table 10"
              android:textSize="20dp"
              android:layout_marginLeft="10dp"
              />
      </LinearLayout>
  </HorizontalScrollView>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/hscrollview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/resultTable"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="Result"
                android:textColor="#000"
                android:textSize="50sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scrollView2" />
        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>
